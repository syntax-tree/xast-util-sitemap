{
  "name": "xast-util-sitemap",
  "version": "1.0.0",
  "description": "xast utility to build a sitemap",
  "license": "MIT",
  "keywords": [
    "unist",
    "xast",
    "xast-util",
    "util",
    "utility",
    "xml",
    "sitemap"
  ],
  "repository": "syntax-tree/xast-util-sitemap",
  "bugs": "https://github.com/syntax-tree/xast-util-sitemap/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "type": "module",
  "main": "./index.mjs",
  "module": "./index.mjs",
  "types": "types",
  "files": [
    "index.mjs",
    "types/index.d.ts"
  ],
  "dependencies": {
    "@types/xast": "^1.0.0",
    "bcp-47-normalize": "^1.0.0",
    "unist-builder": "^2.0.0",
    "xastscript": "^2.0.0"
  },
  "devDependencies": {
    "c8": "^7.0.0",
    "concat-stream": "^2.0.0",
    "dtslint": "^4.0.0",
    "prettier": "^2.0.0",
    "regenerate": "^1.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "xast-util-to-xml": "^2.0.0",
    "xo": "^0.37.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node test.mjs",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov node --experimental-modules test.mjs",
    "test-types": "dtslint types",
    "test": "npm run format && npm run test-coverage && npm run test-types"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "extensions": [
      "mjs"
    ],
    "rules": {
      "complexity": "off",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "max-depth": "off",
      "no-eq-null": "off",
      "no-self-compare": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-type-error": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
